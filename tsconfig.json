{
  "include": ["packages/**/*.ts"],
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "module": "Node16",
    "target": "ESNext",
    "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "packages",
    "baseUrl": "./",
    "paths": {
      "spark-generators-lib/springboot": [
        "node_modules/spark-generators-lib/dist/java-generator/index.js"
      ]
    }
  }
}